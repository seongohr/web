<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodayFragment"
    android:background="@color/black">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:padding="10dp"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                style="@style/TodayCardView"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_column="1">
                <LinearLayout
                    style="@style/TodayLinear">
                    <ImageView
                        style="@style/TodayImages"
                        android:src="@drawable/weather_windy" />
                    <TextView
                        android:id="@+id/windSpeed"
                        style="@style/TodayTxtUnit"
                        android:text="18.23 mph" />
                    <TextView
                        style="@style/TodayTxtIndex"
                        android:text="Wind Speed" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                style="@style/TodayCardView"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_column="2">
                <LinearLayout
                    style="@style/TodayLinear">
                    <ImageView
                        style="@style/TodayImages"
                        android:src="@drawable/gauge" />
                    <TextView
                        android:id="@+id/pressure"
                        style="@style/TodayTxtUnit"
                        android:text="1001.60 mb" />
                    <TextView
                        style="@style/TodayTxtIndex"
                        android:text="Pressure" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                style="@style/TodayCardView"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_column="3">
                <LinearLayout
                    style="@style/TodayLinear">
                    <ImageView
                        style="@style/TodayImages"
                        android:src="@drawable/weather_pouring" />
                    <TextView
                        android:id="@+id/precipitation"
                        style="@style/TodayTxtUnit"
                        android:text="0.00 mmph" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Precipitation"
                        android:gravity="center"
                        android:textColor="@color/txt_grey"
                        android:textSize="20dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                style="@style/TodayCardView"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_column="1">
                <LinearLayout
                    style="@style/TodayLinear">
                    <ImageView
                        style="@style/TodayImages"
                        android:src="@drawable/thermometer" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <TextView
                            android:id="@+id/temperature"
                            style="@style/TodayTxtUnit"
                            android:text="70F" />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="23dp"
                            android:src="@drawable/temperature_fahrenheit"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                    <TextView
                        style="@style/TodayTxtIndex"
                        android:text="Temperature" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                style="@style/TodayCardView"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_column="2">
                <LinearLayout
                    style="@style/TodayLinear">
                    <ImageView
                        android:id="@+id/todaySummaryImg"
                        android:layout_height="80dp"
                        android:layout_width="80dp"
                        android:layout_marginVertical="8.5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/weather_sunny" />
                    <TextView
                        android:id="@+id/todaySummaryTxt"
                        style="@style/TodayTxtIndex"
                        android:text="clear day" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                style="@style/TodayCardView"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_column="3">
                <LinearLayout
                    style="@style/TodayLinear">
                    <ImageView
                        style="@style/TodayImages"
                        android:src="@drawable/water_percent" />
                    <TextView
                        android:id="@+id/humidity"
                        style="@style/TodayTxtUnit"
                        android:text="42%" />
                    <TextView
                        style="@style/TodayTxtIndex"
                        android:text="Humidity" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                style="@style/TodayCardView"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_column="1">
                <LinearLayout
                    style="@style/TodayLinear">
                    <ImageView
                        style="@style/TodayImages"
                        android:src="@drawable/eye_outline" />
                    <TextView
                        android:id="@+id/visibility"
                        style="@style/TodayTxtUnit"
                        android:text="6.30 km" />
                    <TextView
                        style="@style/TodayTxtIndex"
                        android:text="Visibility" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                style="@style/TodayCardView"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_column="2">
                <LinearLayout
                    style="@style/TodayLinear">
                    <ImageView
                        style="@style/TodayImages"
                        android:src="@drawable/weather_fog" />
                    <TextView
                        android:id="@+id/cloudCover"
                        style="@style/TodayTxtUnit"
                        android:text="3%" />
                    <TextView
                        style="@style/TodayTxtIndex"
                        android:text="Cloud Cover" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                style="@style/TodayCardView"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_column="3">
                <LinearLayout
                    style="@style/TodayLinear">
                    <ImageView
                        style="@style/TodayImages"
                        android:src="@drawable/earth" />
                    <TextView
                        android:id="@+id/ozone"
                        style="@style/TodayTxtUnit"
                        android:text="318.60 DU" />
                    <TextView
                        style="@style/TodayTxtIndex"
                        android:text="Ozone" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </TableRow>
    </TableLayout>
</FrameLayout>